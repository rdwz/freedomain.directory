---
interface Props {
	body?: string
	href: string
	repo?: string
	title: string
}

const { body, href, title } = Astro.props
---

<li>
	<a href={href}>
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>

<style>
	li {
		text-align: center;
		background-color: #23262dcc;
		background-position: 100%;
		background-size: 400%;
		border-radius: 7px;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		display: flex;
		list-style: none;
		min-height: 4rem;
		padding: 1px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	li > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: var(--radius-3);
		color: white;
		/* background-color: #23262d; */
		opacity: 0.8;
	}

	h2 {
		margin: 0;
		font-size: var(--font-size-3);
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		color: white;
		margin-top: var(--size-2);
		margin-bottom: 0;
	}

	li:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-green-gradient);
	}

	li:is(:hover, :focus-within) h2,
	li:is(:hover, :focus-within) p {
		color: #23262d;
		/* color: rgb(var(--accent-light)); */
	}
</style>
